<style>
  .tours-cta {
    position: relative;
  }
  .tours-cta {
    width: 100%;
    top: 0;
    left: 0;
    background-image: url('https://cdn.shopify.com/s/files/1/0590/7863/9796/files/15.jpg?v=1632770806');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 0 65%;
    /* background-image: url('{{ section.settings.image | image_url }}'); */
  }
  .tours-cta::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: linear-gradient(60deg, rgba(0,0,0,1) 45%, rgba(0,0,0,0.1) 60%, rgba(0,0,0,0) 70%, rgba(0,0,0,0) 100%);
    /* background: linear-gradient(60deg, rgba(0,0,0,1) 45%, rgba(0,0,0,0.1) 66%, rgba(0,0,0,0) 100%); */
    /* gold accent */
    /* background: linear-gradient(57deg, rgba(0,0,0,1) 55%, rgba(219, 188, 143,0.43323266806722693) 56%, rgba(0,0,0,0.06068364845938379) 57%, rgba(0,0,0,0) 100%); */
    background-repeat: no-repeat;
    z-index: 2;
  }

  .cta-content {
    align-items: flex-start;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 600px;
    position: relative;
    z-index: 3;
    max-width: 40%;
  }

  @media screen and (max-width: 750px) {
    .cta-content {
      min-height: 300px;
    }
    .tours-cta {
      background-position: 0 50%;
    }
  }
</style>

<div class="tours-cta">
  <div class="cta-container page-width">
    <div class="cta-content">
      <h1>{{ section.settings.heading }}</h1> 
      <p>{{ section.settings.description }}</p>
      </p>
      {% comment %} <a class="tour-cta-link" href="{{ '/collections/tours' | url }}">
        <div class="primary primary-cta btn">
          <div class="primary-cta-text">View Tours</div>
        </div>
      </a> {% endcomment %}
      <a 
        href="{{ '/collections/tours' | url }}" 
        class="button button--primary"
        style="transition: all 0.3s ease;"
      >
        Find a Tour
      </a>
    </div>
  </div>
</div>


{% schema %}
