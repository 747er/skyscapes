        "id": "description",
        "label": "Description",
        "info": "Description"
      }, {
        "type": "text",
        "id": "alt_text",
        "label": "Alt Text",
        "info": "Describe the image for accessibility."
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "Tours CTA",
        "category": "Tours CTA"
      }
    ]
  }
{% endschema %}