{{ 'calendar.css' | asset_url | stylesheet_tag }}


<style>
  .landing-section.gallery {
    {% if section.settings.background_image %}
      /* background-image: url('{{ section.settings.background_image | image_url }}'); */
    {% else %}
    /* background-image: url('https://cdn.shopify.com/s/files/1/0590/7863/9796/files/15.jpg?v=1632770806'); */
  {% endif %}

  background-image: initial;
  height: auto;
}

.landing-section.gallery .banner {
  margin: 0;
  background-color: initial;
  font-size: 1em;
  padding: 24px 16px 16px;
}

.landing-section.gallery .banner-subheading,
.landing-section.gallery .banner-title {
  text-transform: uppercase;
}

.gold-line {
  background-color: var(--muted-gold);
  height: 2px;
  width: 100px;
  margin: 24px auto 32px;
}

.landing-section.gallery .gallery-description {
  margin: 0 auto;
  max-width: 800px;
  padding: 20px 0;
  text-align: center;
  font-size: 1.2em;
  font-weight: 300;
}

.landing-section.gallery .banner-subheading {
  padding-bottom: 16px;
  font-size: 1.2em;
}

.landing-section.gallery .banner-title {
  font-size: 3em;
  letter-spacing: 2px;
}
</style>

<div class="landing-section gallery">
  <div class="banner">
    <div class="banner-subheading">{{ section.settings.subheading }}</div>
    <div class="banner-title">{{ section.settings.title }}</div>
    <div class="gold-line"></div>
    <div class="gallery-description">{{ section.settings.description }}</div>
  </div>
</div>

{% schema %}
  {
    "name": "Custom Banner",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Moments Captured on the Chase"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Gallery"
      }, {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Some of our favorite dramatic captures from the plains. Featuring work from our team and participants."
      }, {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      }
    ],
    "presets": [
      {
        "name": "Custom Banner"
      }
    ]
  }
{% endschema %}